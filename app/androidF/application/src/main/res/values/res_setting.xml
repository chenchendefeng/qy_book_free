<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="setting_item">
        <item name="android:paddingLeft">@dimen/dp15</item>
        <item name="android:paddingRight">@dimen/dp15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp60</item>
    </style>

    <style name="setting_item_title_tv">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_item_content_tv">
        <item name="android:drawablePadding">@dimen/dp5</item>
        <item name="android:drawableRight">@mipmap/icon_right_arrow</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>