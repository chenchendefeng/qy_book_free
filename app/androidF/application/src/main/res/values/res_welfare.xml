<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="big_title_welfare">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:textSize">@dimen/sp21</item>
        <item name="android:layout_marginLeft">@dimen/dp15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="item_welfare_progress">
        <item name="android:src">@mipmap/icon_circle_full_yuedushichang</item>
        <item name="android:layout_width">@dimen/dp38</item>
        <item name="android:layout_height">@dimen/dp38</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="item_welfare_progress_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

<style name="item_welfare_progress_content">
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
   <style name="item_welfare_divide">
        <item name="android:background">@color/color_f0f0f0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp8</item>
    </style>


</resources>