<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50">

    <View style="@style/line_divide"/>

    <View
            android:background="@color/color_f5f5f5"
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/day_tv"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/dp12"
            android:layout_centerHorizontal="true"
            tools:text="11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/sign_day_iv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/day_tv"
            android:src="@mipmap/icon_yiqiandao_gou"
            android:layout_height="wrap_content"/>

    <TextView
            android:visibility="gone"
            android:id="@+id/fill_tv"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp14"
            android:text="@string/fill"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_oval_g_ff8226_to_ff5501_r15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>