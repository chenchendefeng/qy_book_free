<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:background="@drawable/shape_fffcf5_bg_5cornner"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:paddingTop="@dimen/dp13"
        android:layout_marginBottom="7dp"
        android:paddingBottom="@dimen/dp9"
        android:layout_height="wrap_content">

    <View
            android:layout_marginRight="@dimen/dp50"
            android:layout_marginTop="@dimen/dp17"
            android:layout_marginLeft="@dimen/dp50"
            android:background="@color/color_ff925d"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp4"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_1"
                    style="@style/item_welfare_progress"/>

            <TextView
                    android:id="@+id/welfare_tv_1"
                    style="@style/item_welfare_progress_text"
                    tools:text="50"
                    android:layout_alignTop="@+id/iv_1"
                    android:layout_alignBottom="@id/iv_1"/>

            <TextView
                    android:id="@+id/progress_time_1"
                    tools:text="30303"
                    style="@style/item_welfare_progress_content"
                    android:layout_below="@+id/iv_1"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_2"
                    style="@style/item_welfare_progress"/>

            <TextView
                    android:id="@+id/welfare_tv_2"
                    style="@style/item_welfare_progress_text"
                    tools:text="50"
                    android:layout_alignTop="@+id/iv_2"
                    android:layout_alignBottom="@id/iv_2"/>

            <TextView
                    android:id="@+id/progress_time_2"
                    tools:text="30303"
                    style="@style/item_welfare_progress_content"
                    android:layout_below="@+id/iv_2"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_3"
                    style="@style/item_welfare_progress"/>

            <TextView
                    android:id="@+id/welfare_tv_3"
                    style="@style/item_welfare_progress_text"
                    tools:text="50"
                    android:layout_alignTop="@+id/iv_3"
                    android:layout_alignBottom="@id/iv_3"/>

            <TextView
                    android:id="@+id/progress_time_3"
                    tools:text="30303"
                    style="@style/item_welfare_progress_content"
                    android:layout_below="@+id/iv_3"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_4"
                    style="@style/item_welfare_progress"/>

            <TextView
                    android:id="@+id/welfare_tv_4"
                    style="@style/item_welfare_progress_text"
                    tools:text="50"
                    android:layout_alignTop="@+id/iv_4"
                    android:layout_alignBottom="@id/iv_4"/>

            <TextView
                    android:id="@+id/progress_time_4"
                    tools:text="30303"
                    style="@style/item_welfare_progress_content"
                    android:layout_below="@+id/iv_4"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>