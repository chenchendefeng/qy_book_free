<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:padding="@dimen/dp5"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">


    <LinearLayout
            android:background="@drawable/selector_vip_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp78">

        <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/money_tv"
                    android:textColor="@color/red_text_color"
                    android:layout_width="wrap_content"
                    tools:text="1yuan"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/money_tv"
                    tools:text="xxxxxxxxx"
                    android:id="@+id/vip_male_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
                android:layout_marginTop="@dimen/dp1"
                android:layout_marginRight="@dimen/dp1"
                android:layout_marginBottom="@dimen/dp1"
                android:textColor="@color/black_text_color"
                tools:text="/å¤©"
                android:gravity="center"
                android:background="@color/color_f0f0f0"
                android:layout_width="@dimen/dp32"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
            android:id="@+id/limited_time_preferential_tv"
            android:textColor="@color/white"
            android:paddingTop="@dimen/dp1"
            android:paddingBottom="@dimen/dp1"
            android:paddingLeft="@dimen/dp10"
            android:textSize="@dimen/sp10"
            android:text="@string/limited_time_preferential"
            android:paddingRight="@dimen/dp10"
            android:background="@mipmap/bg_huiyuan_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/checked_iv"
            android:layout_gravity="right|bottom"
            android:src="@mipmap/huiyuan_triangle_elect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</FrameLayout>