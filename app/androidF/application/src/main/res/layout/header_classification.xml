<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:background="@color/white"
              android:paddingBottom="@dimen/dp10"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <cn.bingoogolapple.bgabanner.BGABanner
            app:banner_pageChangeDuration="1000"
            app:banner_pointAutoPlayAble="true"
            app:banner_transitionEffect="defaultEffect"
            app:banner_pointAutoPlayInterval="4000"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointDrawable="@drawable/selector_banner"
            android:id="@+id/classification_banner"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp15"
            android:layout_height="@dimen/dp77"/>

    <LinearLayout
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:layout_weight="1"
                android:background="@color/color_ededed"
                style="@style/line_divide"
                android:layout_height="@dimen/dp1"/>

        <TextView
                android:textColor="@color/title_main_text_color"
                android:id="@+id/header_classification_name_tv"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:drawablePadding="@dimen/dp10"
                android:drawableLeft="@drawable/shape_oval_ededed_bg_5r"
                android:drawableRight="@drawable/shape_oval_ededed_bg_5r"
                android:includeFontPadding="false"
                tools:text="男生"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:layout_weight="1"
                android:background="@color/color_ededed"
                style="@style/line_divide"
                android:layout_height="@dimen/dp1"/>
    </LinearLayout>
</LinearLayout>