<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            style="@style/line_divide"/>

    <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp90">

        <ImageView
                android:id="@+id/user_header_iv"
                tools:background="@drawable/shape_oval_g_ff8226_to_ff5501_r15"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"/>

        <TextView
                android:id="@+id/user_name_tv"
                android:lines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textSize="@dimen/sp16"
                android:textColor="@color/black_text_color"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_gravity="center_vertical"
                tools:text="现现现现"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/poke_ta_tv"
                android:background="@drawable/shape_circle_36_ffe5220e_bg"
                android:layout_marginRight="@dimen/dp15"
                android:layout_gravity="center_vertical"
                android:text="@string/poke_ta"
                android:textColor="@color/white"
                android:textSize="@dimen/sp11"
                android:gravity="center"
                android:visibility="gone"

                android:layout_width="@dimen/dp65"
                android:layout_height="@dimen/dp26"/>

        <TextView
                android:id="@+id/last_time_tv"
                tools:text="5小时前来过"
                android:layout_marginRight="@dimen/dp15"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>