<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@mipmap/image_lianqian"
            android:layout_width="@dimen/dp296"
            android:layout_height="422dp">

        <TextView
                android:textColor="@color/color_ffff00"
                android:text="连签奖励"
                android:textSize="@dimen/sp16"
                android:layout_marginTop="@dimen/dp92"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/continuous_days_tv"
                android:textSize="@dimen/sp13"
                android:text="(50天)"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:gravity="center"
                android:id="@+id/gold_beans_tv"
                android:layout_marginRight="@dimen/dp63"
                android:layout_marginTop="@dimen/dp48"
                android:layout_gravity="right"
                android:includeFontPadding="false"
                android:textSize="42sp"
                android:textColor="@color/white"
                android:text="10000"
                android:layout_width="@dimen/dp125"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="@color/color_ffed76"
                android:textSize="@dimen/sp10"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp48"
                android:text="连续签到可额外获得大量金豆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/to_withdrawal_btn"
                android:layout_marginTop="@dimen/dp5"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/btn_lianqian_tixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</FrameLayout>