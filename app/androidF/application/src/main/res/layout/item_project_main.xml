<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_below="@+id/cover_iv"
            android:background="@drawable/shadow_15141"
            android:layout_width="@dimen/dp80"
            android:layout_height="wrap_content"/>

    <ImageView
            style="@style/cover_iv"
            android:background="@mipmap/default_book_img"
            android:id="@+id/cover_iv"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp114"/>

    <TextView
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignTop="@+id/cover_iv"
            android:layout_marginTop="@dimen/dp6"
            android:id="@+id/book_name_tv"
            tools:text="shjfhjsdjshfjshdjfs"
            android:textColor="@color/black_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_toRightOf="@+id/cover_iv"
            android:textSize="@dimen/sp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="@dimen/dp15"
            android:id="@+id/book_des_tv"
            android:layout_below="@+id/book_name_tv"
            android:lines="2"
            android:lineSpacingExtra="@dimen/dp5"
            android:textSize="@dimen/sp13"
            tools:text="发的是"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_toRightOf="@+id/cover_iv"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

    <TextView
            android:ellipsize="end"
            android:id="@+id/author_classify_tv"
            android:lines="1"
            android:textSize="@dimen/sp12"
            android:layout_marginBottom="@dimen/dp6"
            android:layout_alignBottom="@+id/cover_iv"
            tools:text="hhsdhhsdfshhsdfshhsdfshhsdfshhsdfshhsdfshhsdfshhsdfshhsdfsfs"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_toRightOf="@+id/cover_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>