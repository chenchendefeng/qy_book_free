<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <View
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/top_divide_view"
            android:background="@color/color_f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp8"/>

    <View
            android:id="@+id/divide_view"
            style="@style/line_divide"/>

    <RelativeLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp18"
            android:paddingBottom="@dimen/dp18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                tools:background="@android:color/black"
                android:id="@+id/left_iv"
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp22"/>

        <LinearLayout
                android:layout_marginLeft="@dimen/dp13"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/left_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/my_title_tv"
                    android:textColor="@color/black_text_color"
                    android:textSize="@dimen/sp17"
                    tools:text="wdiarar"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/my_content_tv"
                    android:visibility="gone"
                    tools:visibility="gone"
                    android:textColor="@color/third_black_text_color"
                    android:textSize="@dimen/sp12"
                    tools:text="wdiarar"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
                android:id="@+id/my_tip_tv"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp30"
                android:layout_alignParentRight="true"
                android:textColor="@color/third_black_text_color"
                android:textSize="@dimen/sp12"
                tools:text="wdiarar"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/my_enter_iv"
                android:layout_marginRight="@dimen/dp16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>